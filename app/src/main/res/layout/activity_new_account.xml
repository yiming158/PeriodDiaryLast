<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF">

        <ImageButton
            android:id="@+id/back_arrow_NA"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#FFF"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText" />

        <RelativeLayout
            android:id="@+id/heading1_NA"
            android:layout_width="269dp"
            android:layout_height="130dp"
            android:layout_below="@+id/back_arrow_NA"
            android:layout_centerInParent="true"
            android:layout_marginTop="66dp">

            <ImageView
                android:id="@+id/add_user_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_add_user"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginLeft="14dp"
                android:layout_toEndOf="@+id/add_user_logo"
                android:layout_toRightOf="@+id/add_user_logo"
                android:text="@string/let_s_create_nand_account"
                android:textColor="#FFB7B7"
                android:textSize="25sp">

            </TextView>
        </RelativeLayout>


        <EditText
            android:id="@+id/email_NA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading1_NA"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="58dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edit_text_background"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="6dp"
            android:textColorHint="#FFB7B7"
            android:autofillHints=""
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/password_NA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_NA"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/edit_text_background"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="6dp"
            android:textColorHint="#FFB7B7"
            android:autofillHints=""
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/signUp_NA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_NA"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="79dp"
            android:layout_marginEnd="161dp"
            android:layout_marginRight="161dp"
            android:background="@drawable/mainscreen_buttons_background"
            android:padding="5dp"
            android:text="@string/signup"
            android:textAllCaps="false" />

    </RelativeLayout>
</ScrollView>