<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUser"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF">

        <ImageButton
            android:id="@+id/back_arrow_AU"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_back_arrow"
            android:background="#FFF"
            android:clickable="true"
            android:focusable="true">
        </ImageButton>

        <TextView
            android:id="@+id/heading1_AU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_arrow_AU"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"
            android:text="Welcome!\nTell us about yourself."
            android:textSize="30sp"
            android:textColor="#FFB7B7">
        </TextView>

        <RelativeLayout
            android:id="@+id/card1_AU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading1_AU"
            android:layout_marginTop="25dp"
            android:layout_centerInParent="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/card1_text_AU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Is your period\nregular?"
                android:textSize="18sp"
                android:textColor="#FFB7B7">
            </TextView>

            <Button
                android:id="@+id/yes_card1_AU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toLeftOf="@+id/no_card1_AU"
                android:background="@drawable/mainscreen_buttons_background"
                android:text="Yes"
                android:textAllCaps="false">
            </Button>

            <Button
                android:id="@+id/no_card1_AU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mainscreen_buttons_background"
                android:layout_alignParentRight="true"
                android:text="No"
                android:textAllCaps="false">
            </Button>

            <View
                android:id="@+id/seperator1_AU"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/card1_text_AU"
                android:layout_marginTop="5dp"
                android:background="#000">
            </View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card2_AU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card1_AU"
            android:layout_marginTop="18dp"
            android:layout_centerInParent="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/card2_text_AU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Period\nStart Date."
                android:textSize="18sp"
                android:textColor="#FFB7B7">
            </TextView>

            <EditText
                android:id="@+id/start_date_AU"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_toStartOf="@+id/date_icon_AU"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edit_text_background"
                android:padding="6dp"
                android:hint="DD/MM/YYYY"
                android:textColorHint="#000">

            </EditText>

            <ImageView
                android:id="@+id/date_icon_AU"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_date"
                android:layout_alignParentRight="true">
            </ImageView>

            <View
                android:id="@+id/seperator2_AU"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/card2_text_AU"
                android:layout_marginTop="5dp"
                android:background="#000">
            </View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card3_AU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card2_AU"
            android:layout_marginTop="18dp"
            android:layout_centerInParent="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/card3_text_AU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Period Cycle Length."
                android:textSize="18sp"
                android:textColor="#FFB7B7">
            </TextView>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/cycle_length_AU"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/edit_text_background"
                app:backGroundColor="#FFF"
                app:initialNumber="15"
                app:textColor="#000"
                android:padding="3dp">
            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            <View
                android:id="@+id/seperator3_AU"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/card3_text_AU"
                android:layout_marginTop="5dp"
                android:background="#000">
            </View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card4_AU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card3_AU"
            android:layout_marginTop="18dp"
            android:layout_centerInParent="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/card4_text_AU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usual cycle."
                android:textSize="18sp"
                android:textColor="#FFB7B7">
            </TextView>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/usual_cycle_AU"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/edit_text_background"
                android:padding="3dp"
                app:backGroundColor="#FFF"
                app:initialNumber="2"
                app:textColor="#000">
            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            <View
                android:id="@+id/seperator4_AU"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/card4_text_AU"
                android:layout_marginTop="5dp"
                android:background="#000">
            </View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card5_AU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card4_AU"
            android:layout_marginTop="18dp"
            android:layout_centerInParent="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:id="@+id/card5_text_AU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age."
                android:textSize="18sp"
                android:textColor="#FFB7B7">
            </TextView>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/age_AU"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/edit_text_background"
                app:backGroundColor="#FFF"
                app:initialNumber="9"
                app:textColor="#000"
                android:padding="3dp">
            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            <View
                android:id="@+id/seperator5_AU"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_below="@+id/card5_text_AU"
                android:layout_marginTop="5dp"
                android:background="#000">
            </View>
        </RelativeLayout>

        <Button
            android:id="@+id/done_AU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Done"
            android:textColor="#000"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/mainscreen_buttons_background"
            android:layout_below="@+id/card5_AU"
            android:layout_marginTop="35dp"
            android:layout_centerInParent="true">

        </Button>

    </RelativeLayout>

</ScrollView>